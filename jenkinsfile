node{

    
    sh "pwd>current_path"
   echo '1'
   env.WORKSPACE = readFile 'current_path'
   echo '2'
   env.WORKSPACE = env.WORKSPACE.trim()
   echo '3'
   stage('Preparation') {
      mvnHome = tool 'M3'
   }
   stage "checkout"
   checkout scm
   
   stage 'build'
   sh "'${mvnHome}/bin/mvn' -Dmaven.test.failure.ignore clean package"
   
    
       }
